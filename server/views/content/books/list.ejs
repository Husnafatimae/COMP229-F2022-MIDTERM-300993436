<main class="container">
    <div class="row">
        <div class="offset-md-1 col-md-11">
            <h1>
                <%= title %>
            </h1>
            <!-- ------------------------ -->
            <!-- FIX THE ADD BUTTON BELOW -->
            <!-- ------------------------ -->
            <a href="/book-add" class="btn btn-primary" role="button">
                <i class="fas fa-plus-circle"></i> Add a Book</a>
            <br>
            
                <!-- Header Row-->
                <table class="table table-striped table-bordered table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col" class="text-center">#</th>
                            <th scope="col">BookTitle</th>
                            <th scope="col">Author</th>
                            <th scope="col">Year</th>
                            <th scope="col">Description</th>
                            <th scope="col">Price</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody id="bookList">
                        <!-- Repeatable Rows -->
                        <% for(let count = 0; count < books.length; count++) { %>
                            <tr>
                                <th scope="row" class="text-center"><%= count + 1 %></th>
                                <td><%= books[count].booktitle %></td>
                                <td><%= books[count].author %></td>
                                <td><%= books[count].year %></td>
                                <td><%= books[count].description %></td>
                                <td><%= books[count].price %></td>
                            <!-- ------------------------ -->
                            <!-- ADD the EDIT BUTTON HERE -->
                            <!-- ------------------------ -->
                            <td class="text-center col-1">
                                <!-- ------------------------ -->
                                <!-- ADD the EDIT BUTTON HERE -->
                                <!-- ------------------------ -->
                                <a href="/book-edit/<%= books[count]._id %>"
                                    class="btn btn-primary btn-sm">
                                    <i class="fas fa-pencil-alt"></i> Edit</a>
                            </td>
                        <td class="text-center col-1">
                            <!-- ------------------------ -->
                            <!-- ADD the DELETE BUTTON HERE -->
                            <!-- ------------------------ -->
                            <a href="/book-delete/<%= books[count]._id %>"
                                class="btn btn-danger btn-sm">
                                <i class="fas fa-trash-alt"></i> Delete</a>
                        </td>
                    </tr>
                    <% } %>
            </table>
        </div>
    </div>
</main>